---
title: With hint
---

<% @model = Forms::Radios.valid_example %>
<%= form_with model: @model, url: "/" do |form| %>
  <%= form.cads_collection_radio_buttons(
    :radios_hint,
    collection: @model.options,
    text_method: :name,
    value_method: :id,
    hint: "Example hint text"
  ) %>
<% end %>
