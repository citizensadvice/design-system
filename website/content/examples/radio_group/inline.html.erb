---
title: Inline
---

<% @model = Forms::Radios.valid_example %>
<%= form_with model: @model, url: "/" do |form| %>
  <%= form.cads_collection_radio_buttons(
    :radios_inline,
    collection: @model.options.take(2),
    text_method: :name,
    value_method: :id,
    layout: :inline
  ) %>
<% end %>
