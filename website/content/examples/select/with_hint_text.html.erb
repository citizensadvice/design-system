---
title: with hint
---

<% @model = Forms::Select.valid_example %>
<%= form_with model: @model, url: "/" do |form| %>
  <%= form.cads_collection_select(
    :select_hint,
    collection: @model.select_options,
    text_method: :name,
    value_method: :id,
    hint: "Example hint text"
  ) %>
<% end %>
