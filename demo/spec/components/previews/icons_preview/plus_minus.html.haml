.cads-grid-container
  .cads-grid-row
    .cads-grid-col-8
      %table.cads-table
        %thead
          %tr
            %th{ scope: "col" }
              Component class
            %th{ scope: "col" }
              Toggle
            %th{ scope: "col" }
              Icon
        %tbody
          %tr
            %td
              PlusMinus
            %td
              %button.cads-button{ type: "button" }
                Toggle minus
            %td
              = render CitizensAdviceComponents::Icons::PlusMinus.new(size: :large)

%script
  :plain
    var button = document.querySelector('button');
    button.addEventListener('click', function() {
      var icon = document.querySelector('.cads-icon');
      icon.classList.toggle('show-minus')
    })
