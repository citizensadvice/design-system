{
    "name": "@citizensadvice/design-system",
    "version": "0.6.0",
    "description": "Citizens Advice Design System",
    "files": [
        "scss",
        "js",
        "lib",
        "dist",
        "fonts",
        "haml",
        "CHANGELOG.md",
        "README.md"
    ],
    "scripts": {
        "prepublishOnly": "npm run lint && npm run build && node ./scripts/release",
        "pre-commit": "lint-staged",
        "check-size": "node ./scripts/check-size -r",
        "check-size:write": "node ./scripts/check-size -r -w",
        "build": "npm run clean && node ./scripts/build -r && npm run check-size -r",
        "clean": "rm -fr ./dist",
        "styleguide": "start-storybook -p 6006",
        "styleguide:ci": "start-storybook -p 6006 --ci",
        "docs:build": "build-storybook -o docs",
        "docs:serve": "http-server docs",
        "lint": "stylelint \"./scss/**/*.scss\" \"./styleguide/**/*.scss\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/citizensadvice/design-system-testing.git"
    },
    "author": "Citizens Advice",
    "license": "UNLICENCED",
    "bugs": {
        "url": "https://github.com/citizensadvice/design-system-testing/issues"
    },
    "homepage": "https://github.com/citizensadvice/design-system-testing#readme",
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@storybook/addon-a11y": "^5.3.17",
        "@storybook/addon-actions": "^5.3.17",
        "@storybook/addon-knobs": "^5.3.17",
        "@storybook/html": "^5.3.17",
        "autoprefixer": "^9.7.5",
        "babel-loader": "^8.1.0",
        "backstopjs": "^4.5.0",
        "chalk": "^3.0.0",
        "cssnano": "^4.1.10",
        "dotenv": "^8.2.0",
        "eslint": "^6.7.2",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.1",
        "fs-extra": "^8.1.0",
        "git-state": "^4.1.0",
        "http-server": "^0.12.1",
        "husky": "^4.2.0",
        "inquirer": "^7.1.0",
        "js-beautify": "^1.10.3",
        "lint-staged": "^10.1.0",
        "markdown-loader": "^5.1.0",
        "moment": "^2.24.0",
        "node-sass": "^4.13.0",
        "postcss": "^7.0.27",
        "postcss-url": "^8.0.0",
        "prettier": "^1.19.1",
        "raw-loader": "^4.0.0",
        "resolve-url-loader": "^3.1.1",
        "sass-loader": "^8.0.0",
        "semver": "^7.1.3",
        "shell-loader": "^1.2.1",
        "simple-git": "^1.132.0",
        "stylelint": "^13.2.1",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-scss": "^3.16.0",
        "stylelint-selector-bem-pattern": "^2.1.0",
        "webdriverio": "^5.22.4"
    },
    "dependencies": {
        "@baseonmars/priority-nav": "^1.3.1"
    },
    "browserslist": [
        "IE 11",
        "last 2 Edge versions",
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 2 Safari versions",
        "last 2 ChromeAndroid versions",
        "last 2 iOS versions"
    ],
    "lint-staged": {
        "*.scss": [
            "stylelint"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pre-commit"
        }
    }
}
