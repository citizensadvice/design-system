{
  "name": "@citizensadvice/design-system",
  "version": "8.0.2",
  "description": "Citizens Advice Design System",
  "repository": "https://github.com/citizensadvice/design-system",
  "author": "Citizens Advice",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "files": [
    "assets",
    "scss",
    "lib",
    "!lib/**/*.test.js",
    "!scss/**/__tests__",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "NOTICE"
  ],
  "scripts": {
    "release": "npm run lint && node ./scripts/release",
    "prepublishOnly": "npm run lint && node ./scripts/publish",
    "size-limit": "size-limit",
    "format": "prettier --write .",
    "lint:format": "prettier --check .",
    "lint:css": "stylelint \"./scss/**/*.scss\"",
    "lint:js": "eslint .",
    "lint": "npm-run-all lint:* size-limit",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@eslint/js": "^9.28.0",
    "@size-limit/file": "^11.0.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/user-event": "^14.5.1",
    "chalk": "^4.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.12.0",
    "git-state": "^4.1.0",
    "glob": "^11.0.0",
    "globals": "^16.2.0",
    "inquirer": "^12.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "^1.69.0",
    "semver": "^7.3.8",
    "simple-git": "^3.18.0",
    "size-limit": "^11.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-selector-bem-pattern": "^4.0.0"
  },
  "size-limit": [
    {
      "path": "lib/**/*.js",
      "limit": "16 kB"
    }
  ],
  "browserslist": [
    "IE 11",
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/cypress/",
      "/demo/config/webpack/",
      "/engine/spec/",
      "/node_modules/",
      "/vendor/"
    ]
  }
}
