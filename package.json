{
  "name": "@citizensadvice/design-system",
  "version": "5.3.0-alpha.1",
  "description": "Citizens Advice Design System",
  "repository": "https://github.com/citizensadvice/design-system",
  "author": "Citizens Advice",
  "license": "UNLICENCED",
  "files": [
    "assets",
    "scss",
    "lib",
    "!scss/**/__tests__",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "start": "npm run storybook",
    "start:watch": "npm-run-all -p --print-label storybook watch-examples",
    "storybook": "start-storybook -p 6006 -s styleguide",
    "watch-examples": "sane ./bin/generate-examples engine/previews --glob=\"**/*.rb\"",
    "release": "npm run lint && npm run build && node ./scripts/release",
    "prepublishOnly": "npm run lint && npm run build && node ./scripts/publish",
    "size-limit": "size-limit",
    "clean": "rm -fr ./lib",
    "build:ts": "tsc -b",
    "build:scss": "sass scss/lib.scss:lib/lib.css --no-source-map && postcss lib/lib.css --replace",
    "build": "npm-run-all clean --parallel build:** --sequential size-limit",
    "docs:build": "build-storybook -o docs",
    "docs:serve": "http-server -p 6006 docs",
    "lint:format": "prettier --check .",
    "lint:css": "stylelint \"./scss/**/*.scss\" \"./styleguide/**/*.scss\"",
    "lint:es": "eslint . --ext .js,.ts",
    "lint": "npm-run-all lint:*",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-viewport": "^6.3.7",
    "@storybook/html": "^6.3.7",
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/user-event": "^14.0.4",
    "@types/jest": "^27.4.0",
    "@types/jsdom": "^16.2.14",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.1",
    "cssnano": "^5.0.6",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "git-state": "^4.1.0",
    "glob": "^8.0.3",
    "http-server": "^14.0.0",
    "inquirer": "^8.1.1",
    "jest": "^28.0.3",
    "jsdom": "^16.5.3",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.4",
    "postcss-cli": "^9.0.2",
    "postcss-url": "^10.1.3",
    "prettier": "2.7.1",
    "resolve-url-loader": "^4.0.0",
    "sane": "^4.1.0",
    "sass": "^1.35.1",
    "sass-loader": "^10.1.1",
    "semver": "^7.3.5",
    "simple-git": "^3.4.0",
    "size-limit": "^6.0.4",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "typescript": "^4.5.5",
    "url-polyfill": "^1.1.12"
  },
  "size-limit": [
    {
      "path": "lib/lib.css",
      "limit": "16 kB",
      "webpack": false
    },
    {
      "path": "lib/*.js",
      "limit": "6 kB"
    }
  ],
  "browserslist": [
    "IE 11",
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/cypress/",
      "/demo/config/webpack/",
      "/engine/spec/",
      "/lib/",
      "/node_modules/",
      "/vendor/"
    ]
  },
  "dependencies": {
    "jest-environment-jsdom": "^28.0.2"
  }
}
