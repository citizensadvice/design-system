{
  "name": "@citizensadvice/design-system",
  "version": "4.0.6-alpha.0",
  "description": "Citizens Advice Design System",
  "repository": "https://github.com/citizensadvice/design-system",
  "author": "Citizens Advice",
  "license": "UNLICENCED",
  "files": [
    "scss",
    "lib",
    "!scss/__tests__",
    "locales",
    "fonts",
    "haml",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "start": "npm run storybook",
    "start:watch": "npm-run-all -p --print-label storybook watch-examples",
    "storybook": "start-storybook -p 6006 -s styleguide",
    "watch-examples": "sane ./bin/generate-examples engine/previews --glob=\"**/*.rb\"",
    "release": "npm run lint && npm run build && node ./scripts/release",
    "prepublishOnly": "npm run lint && npm run build && node ./scripts/publish",
    "pre-commit": "lint-staged",
    "size-limit": "size-limit",
    "clean": "rm -fr ./lib",
    "build:js": "babel src/js -d lib --ignore src/js/**/*.test.js",
    "build:ts": "tsc -b",
    "build:scss": "sass scss/lib.scss:lib/lib.css --no-source-map && postcss lib/lib.css --replace",
    "build": "npm-run-all clean --parallel build:** --sequential size-limit",
    "docs:build": "build-storybook -o docs",
    "docs:serve": "http-server -p 6006 docs",
    "lint:format": "prettier --check .",
    "lint:css": "stylelint \"./scss/**/*.scss\" \"./styleguide/**/*.scss\"",
    "lint:es": "eslint . --ext .js,.ts",
    "lint": "npm-run-all lint:*",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "vr-test:install": "cd testing && npm install",
    "vr-test:test": "node scripts/vr-test.js",
    "vr-test:ci": "./bin/jenkins/visual_regression && docker-compose down",
    "vr-test:standalone": "cd testing/visual-regression && npx backstop test --docker --config=backstop-config.js",
    "vr-test:reference": "cd testing/visual-regression && npx backstop reference --docker --config=backstop-config.js",
    "vr-test:approve": "cd testing/visual-regression && npx backstop approve --config=backstop-config.js",
    "vr-test:open-report": "cd testing/visual-regression && npx backstop openReport --config=backstop-config.js",
    "wcag-test": "node scripts/wcag-test.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/html": "^6.2.9",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chalk": "^4.1.1",
    "cssnano": "^4.1.11",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "git-state": "^4.1.0",
    "http-server": "^0.12.3",
    "husky": "^6.0.0",
    "inquirer": "^8.0.0",
    "jest": "^26.4.2",
    "jest-date-mock": "^1.0.8",
    "js-beautify": "^1.13.13",
    "jsdom": "^16.5.3",
    "lint-staged": "^10.5.4",
    "markdown-loader": "^6.0.0",
    "marked": "^2.0.3",
    "moment": "^2.27.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^2.1.2",
    "raw-loader": "^4.0.1",
    "resolve-url-loader": "^3.1.1",
    "sane": "^4.1.0",
    "sass": "^1.32.11",
    "sass-loader": "^10.1.1",
    "semver": "^7.3.5",
    "shell-loader": "^1.2.1",
    "simple-git": "^2.38.0",
    "size-limit": "^4.10.2",
    "stylelint": "^13.13.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "systemjs": "^6.8.3",
    "typescript": "^4.2.4",
    "url-polyfill": "^1.1.11"
  },
  "size-limit": [
    {
      "path": "lib/lib.css",
      "limit": "16 kB",
      "webpack": false
    },
    {
      "path": "lib/*.js",
      "limit": "6 kB"
    }
  ],
  "browserslist": [
    "IE 11",
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/vendor/",
      "/lib/",
      "/demo/config/webpack/"
    ],
    "setupFiles": [
      "jest-date-mock"
    ]
  },
  "lint-staged": {
    "*.scss": [
      "stylelint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
