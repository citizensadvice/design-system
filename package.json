{
  "name": "@citizensadvice/design-system",
  "version": "1.13.0",
  "description": "Citizens Advice Design System",
  "files": [
    "scss",
    "lib",
    "fonts",
    "haml",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "start": "npm run styleguide",
    "release": "npm run lint && npm run build && node ./scripts/release",
    "prepublishOnly": "npm run lint && npm run build && node ./scripts/publish",
    "pre-commit": "lint-staged",
    "check-size": "node ./scripts/check-size -r",
    "check-size:write": "node ./scripts/check-size -r -w",
    "build:js": "babel src/js -d lib --ignore src/js/**/*.test.js",
    "build:ts": "tsc -b",
    "build:scss": "node ./scripts/build -r && npm run check-size -r",
    "build": "npm run clean && npm-run-all build:scss build:js build:ts",
    "clean": "rm -fr ./lib",
    "styleguide": "start-storybook -p 6006 -s styleguide",
    "styleguide:ci": "start-storybook -p 6006 --ci",
    "docs:build": "build-storybook -o docs",
    "docs:serve": "http-server -p 6006 docs",
    "lint:css": "stylelint \"./scss/**/*.scss\" \"./styleguide/**/*.scss\"",
    "lint:es": "eslint src scripts testing --ext .js,.ts",
    "lint": "prettier --check . && npm-run-all lint:css lint:es",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch --notify",
    "vr-test:install": "cd testing && npm install",
    "vr-test:test": "node scripts/vr-test.js",
    "vr-test:ci": "./bin/jenkins/visual_regression && docker-compose down",
    "vr-test:standalone": "cd testing/visual-regression && npx backstop test --docker --config=backstop-config.js",
    "vr-test:reference": "cd testing/visual-regression && npx backstop reference --docker --config=backstop-config.js",
    "vr-test:approve": "cd testing/visual-regression && npx backstop approve --config=backstop-config.js",
    "vr-test:open-report": "cd testing/visual-regression && npx backstop openReport --config=backstop-config.js",
    "wcag-test": "node scripts/wcag-test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/citizensadvice/design-system-testing.git"
  },
  "author": "Citizens Advice",
  "license": "UNLICENCED",
  "bugs": {
    "url": "https://github.com/citizensadvice/design-system-testing/issues"
  },
  "homepage": "https://github.com/citizensadvice/design-system-testing#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@storybook/addon-a11y": "^6.0.25",
    "@storybook/addon-essentials": "^6.0.25",
    "@storybook/html": "^6.0.25",
    "@testing-library/dom": "^7.26.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "autoprefixer": "^10.0.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chalk": "^4.1.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "fs-extra": "^9.0.1",
    "git-state": "^4.1.0",
    "http-server": "^0.12.3",
    "husky": "^4.3.0",
    "inquirer": "^7.3.3",
    "jest": "^26.4.2",
    "js-beautify": "^1.13.0",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.3.0",
    "markdown-loader": "^6.0.0",
    "moment": "^2.27.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-url": "^8.0.0",
    "prettier": "^2.1.2",
    "raw-loader": "^4.0.1",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^10.0.2",
    "semver": "^7.3.2",
    "shell-loader": "^1.2.1",
    "simple-git": "^2.21.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "systemjs": "^6.5.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {},
  "browserslist": [
    "IE 11",
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/vendor/",
      "/lib/"
    ]
  },
  "lint-staged": {
    "*.scss": [
      "stylelint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
