{
  "name": "@citizensadvice/design-system",
  "version": "5.5.0-alpha.4",
  "description": "Citizens Advice Design System",
  "repository": "https://github.com/citizensadvice/design-system",
  "author": "Citizens Advice",
  "license": "UNLICENCED",
  "files": [
    "assets",
    "scss",
    "lib",
    "!scss/**/__tests__",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "release": "npm run lint && npm run build && node ./scripts/release",
    "prepublishOnly": "npm run lint && npm run build && node ./scripts/publish",
    "size-limit": "size-limit",
    "clean": "rm -fr ./lib",
    "build:ts": "tsc -b",
    "build:scss": "sass scss/lib.scss:lib/lib.css --no-source-map && postcss lib/lib.css --replace",
    "build": "npm-run-all clean --parallel build:** --sequential size-limit",
    "lint:format": "prettier --check .",
    "lint:css": "stylelint \"./scss/**/*.scss\"",
    "lint:es": "eslint . --ext .js,.ts",
    "lint": "npm-run-all lint:*",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@size-limit/file": "^8.2.4",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "autoprefixer": "^10.4.14",
    "chalk": "^4.1.2",
    "cssnano": "^5.1.15",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "git-state": "^4.1.0",
    "glob": "^8.1.0",
    "inquirer": "^8.2.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-cli": "^9.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "2.8.8",
    "sass": "^1.62.1",
    "semver": "^7.3.8",
    "simple-git": "^3.18.0",
    "size-limit": "^8.1.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "typescript": "^4.9.5"
  },
  "size-limit": [
    {
      "path": "lib/lib.css",
      "limit": "16 kB"
    },
    {
      "path": "lib/**/*.js",
      "limit": "16 kB"
    }
  ],
  "browserslist": [
    "IE 11",
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
  ],
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/cypress/",
      "/demo/config/webpack/",
      "/engine/spec/",
      "/lib/",
      "/node_modules/",
      "/vendor/"
    ]
  }
}
