<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <meta charset="utf-8" />
    <%= seo %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="<%= webpack_path "css" %>" />
    <style><%= Rouge::Theme.find('github').render(scope: '.highlight') %></style>
  </head>
  <body>
    <%= render CitizensAdviceComponents::Header.new do |c| %>
      <%- c.logo(title: site.metadata.title) %>
    <% end %>
    <%= render CitizensAdviceComponents::Navigation.new(
      links: [
        { url: "/getting-started", title: "Getting started" },
        { url: "/foundations", title: "Foundations" },
        { url: "/components", title: "Components" }
      ]
    ) %>
    <%= yield %>
    <%= render CitizensAdviceComponents::Footer.new do |c| %>
      <%
        c.column(
          title: "Elsewhere",
          links: [
            { url: "https://github.com/citizensadvice/design-system/releases", title: "Release notes" },
            { url: "https://github.com/citizensadvice/design-system", title: "GitHub" }
          ]
        )
        c.column(
          title: "About this site",
          links: [
            { url: "/accessibility/", title: "Accessibility statement" },
            { url: "/privacy/", title: "Privacy policy" }
          ]
        )
      %>
    <% end %>
    <script src="/vendor/iframeResizer.min.js" defer></script>
    <script src="<%= webpack_path "js" %>" defer></script>
  </body>
</html>
