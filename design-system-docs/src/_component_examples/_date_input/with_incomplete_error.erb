<%= render CitizensAdviceComponents::DateInput.new(
      name: "bday",
      label: "Date of birth",
      errors: %i[year],
      values: {
        day: 1,
        month: 1
      },
      options: {
        error_message: "Date of birth must include a year"
      }
    ) do |c|
        c.with_date_fields([
                             {
                               name: "day",
                               id: "day-id",
                               timespan: :day,
                               value: 1
                             },
                             {
                               name: "month",
                               id: "month-id",
                               timespan: :month,
                               value: 1
                             },
                             {
                               name: "year",
                               id: "year-id",
                               timespan: :year
                             }
                           ])
end %>
