<%= render CitizensAdviceComponents::DateInput.new(
      name: "bday",
      label: "Date of birth",
      errors: %i[day],
      options: {
        error_message: "Date of birth must be a real date"
      }
    ) do |c|
        c.with_date_fields([
                             {
                               name: "day",
                               id: "day-id",
                               timespan: :day,
                               value: 99
                             },
                             {
                               name: "month",
                               id: "month-id",
                               timespan: :month,
                               value: 1
                             },
                             {
                               name: "year",
                               id: "year-id",
                               timespan: :year,
                               value: 1990
                             }
                           ])
end %>
