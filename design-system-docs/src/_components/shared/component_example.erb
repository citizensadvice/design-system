<div class="component-example">
  <div class="component-example__links">
    <a href="<%= example.relative_url %>" rel="noreferrer" target="_blank">
      Open example in a new tab
    </a>
  </div>
  <div class="component-example__preview">
    <% if iframe? %>
      <iframe class="component-example__iframe js-component-example-iframe" title="<%= example_title %> example" src="<%= example.relative_url %>" frameborder="0" loading="lazy"></iframe>
    <% else %>
      <%= example.content %>
    <% end %>
  </div>
  <div class="component-example__source">
    <% if show_html? %>
      <%= render(CitizensAdviceComponents::Disclosure.new(
        closed_summary: "Show HTML",
        open_summary: "Hide HTML",
        id: "#{example_title.parameterize}-html")) do %>
        <pre class="highlight"><code><%= raw highlighted_html %></code></pre>
      <% end %>
    <% end %>
    <% if show_source? %>
      <%= render(CitizensAdviceComponents::Disclosure.new(
        closed_summary: "Show ERB code",
        open_summary: "Hide ERB code",
        id: "#{example_title.parameterize}-source")) do %>
        <pre class="highlight"><code><%= raw highlighted_source %></code></pre>
      <% end %>
    <% end %>
  </div>
</div>
