.cads-form-field{ class: ("cads-form-field--has-error" if radio["has_error"]) }
  .cads-form-field__error-marker
  %fieldset.cads-form-field__content.cads-radio-group{ class: [("cads-radio-group--inline" if radio["inline"]), ("cads-radio-group--small" if radio["small"])] }
    %legend.cads-form-field__label
      = radio["label"]
      - if radio["optional"]
        %span.cads-form-field__optional= t("cads.form.optional")
    - if radio["hint"]
      %p.cads-form-field__hint= radio["hint"]
    - if radio["error_message"]
      %p.cads-form-field__error-message= radio["error_message"]
    - radio["options"].each do |option|
      .cads-radio-group__item
        %input.cads-radio-group__input{ type: "radio",
          id: "#{radio['name']}-#{option['value']}",
          name: radio["name"],
          value: option["value"],
          checked: option["checked"] ? true : false }
        %label.cads-radio-group__label{ for: "#{radio['name']}-#{option['value']}" }
          = option["label"]
