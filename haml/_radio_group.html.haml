.cads-form-field{ class: ('cads-form-field--has-error' if input['has_error']) }
  .cads-form-field__error-marker
  %fieldset.cads-form-field__content.cads-radio-group{:class => ("cads-radio-group--compact" if radio['is_compact'])}
    %legend.cads-form-field__label
      = radio['label']
      - if radio['optional']
        %span.cads-form__optional= " (#{t('cads.form.optional')})"
    - if radio['hint']
      %p.cads-form-field__hint= radio['hint']
    - if radio['error_message']
      %p.cads-form-field__error-message= radio['error_message']
    - radio['options'].each do |radioItem|
      .cads-radio-group__item
        %input.cads-radio-group__input{ type: "radio",
          id: "#{radio['name']}-#{radioItem['value']}",
          name: radio['name'],
          value: radioItem['value'] }
        %label.cads-radio-group__label{ for: "#{radio['name']}-#{radioItem['value']}" }
          = radioItem['label']
        -# %span.cads-radio-group__item-checkmark
