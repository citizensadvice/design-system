- feedback_url ||= false
- links ||= {}
%footer#cads-footer.cads-footer
  - if feedback_url
    %p.cads-footer__feedback
      %a.cads-footer__hyperlink{ href: feedback_url, target: "_blank", rel: "noopener" }= t("cads.footer.website_feedback")
      %span.cads-footer__feedback-icon.cads-icon_external-link
  %nav.cads-grid-container{"aria-label": t("cads.footer.navigation_title") }
    .cads-grid-row
      - ["column_one", "column_two", "column_three", "column_four"].each do |column|
        - if links[column]
          = render partial: "footer_links", locals: { links: links[column]}
    .cads-footer__company-info
      .cads-footer__logo
        %a.cads-logo{ href: root_path, title: t("cads.shared.logo_title") }
      .cads-footer__meta
        %p.cads-footer__meta-text= t("cads.shared.copyright")
        %p.cads-footer__meta-text= t("cads.shared.legal_summary")
