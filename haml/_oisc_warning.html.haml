-# Set defaults for parameters
- body = oisc_warning.fetch('body', '') # Body is optional
- is_sticky = oisc_warning.fetch('is_sticky', false)

- if is_sticky
  .js-oisc-warning-sticky-sentry
.cads-oisc-warning{:class => ("is-sticky" if is_sticky)}
  .cads-oisc-warning__header
    %h2.cads-oisc-warning__title.cads-heading-small= oisc_warning['title']
    - if is_sticky
      %button.cads-oisc-warning__close.js-oisc-warning-close
        %span.cads-icon_close
        %span.cads-sr-only= t('cads.oisc_warning.close')

  - if not body.empty?
    .cads-oisc-warning__body= body
