.cads-targeted-content{:id => targetContent[:id]}
  %button.cads-targeted-content__title{:"aria-label" => "Click to expand"}
    %h2.cads-heading-medium
      = targetContent[:title]
    %span.cads-heading-medium.cads-icon-minus
    %span.cads-heading-medium.cads-icon-plus
  .cads-targeted-content__content
    = targetContent[:body]
    %hr.separator
    %button.cads-linkbutton.cads-targeted-content__close-button{:"aria-label" => "Close #{targetContent[:title]}"}
