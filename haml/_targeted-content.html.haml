.cads-targeted-content{:id => targetContent[:id]}
  %button.cads-targeted-content__title{:"aria-label" => "#{targetContent[:title]}. Click to expand content"}
    %h2.cads-heading-medium
      = targetContent[:title]
    %span.cads-heading-medium.cads-icon-minus
    %span.cads-heading-medium.cads-icon-plus
  .cads-targeted-content__content
    = targetContent[:body]
    %hr.separator
    %button.cads-hyperlink.cads-targeted-content__close-button
