%header.cads-header
  .cads-grid-container
    .cads-grid-row
      .cads-grid-col-md-5.cads-header-logo-row
        = render "@citizensadvice/design-system/haml/logo_clickable", locals: { root_path: root_path }
        %button.cads-search-reveal.cads-icon_search{title: t('cads.header.search_mobile'), "aria-expanded": "false"}
      .cads-grid-col-md-7.cads-align-right.cads-header-search-row
        %ul.cads-header-account-panel
          %li
            %a{href: alt_language['url']}= alt_language['title']
          %li
            %a{href: sign_in['url']}
              = sign_in['text']
        = render partial: "@citizensadvice/design-system/haml/search", locals: { search_action_url: search_action_url }
