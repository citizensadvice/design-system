-# Default type to collapse if none is provided
- type = breadcrumbs.fetch("type", "collapse")
- full_width = breadcrumbs.fetch("full_width", false) ? "cads-breadcrumbs-full-width" : ""

%nav{ class: "cads-breadcrumbs #{full_width} cads-breadcrumbs--#{type}" }
  %ul.cads-breadcrumbs__list
    %li.cads-breadcrumbs__crumb
      %a.cads-breadcrumb{ href: "/" }= t("cads.breadcrumbs.home")
    - breadcrumbs["breadcrumb_links"].each_with_index do |link, index|
      %li.cads-breadcrumbs__crumb
        - if index == breadcrumbs["breadcrumb_links"].size - 1
          %span.cads-breadcrumb
            = link["title"]
        - else
          %a.cads-breadcrumb{ href: link["url"] }
            = link["title"]
