= render(DesignSystem::FormFieldComponent.new(has_error: error?)) do
  %fieldset.cads-radio-group{ class: [("cads-radio-group--inline" if inline?), ("cads-radio-group--small" if small?)] }
    %legend.cads-form-field__label
      = label
      - if optional?
        %span.cads-form-field__optional= t(".optional")
    - if hint
      %p.cads-form-field__hint= hint
    - if error?
      %p.cads-form-field__error-message= error_message
    - options.each do |option|
      .cads-radio-group__item
        %input.cads-radio-group__input{ type: "radio",
          id: "#{name}-#{option[:value]}",
          name: name,
          value: option[:value] }
        %label.cads-radio-group__label{ for: "#{name}-#{option[:value]}" }
          = option[:label]
