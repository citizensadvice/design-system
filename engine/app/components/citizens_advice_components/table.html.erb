<div class="cads-table-container">
  <table class="cads-table<% if caption? %> cads-table--captioned<% end %> <% if responsive_headers? %>cads-table--responsive-headers<% end %>">
    <% if caption? %>
      <caption><%= caption %></caption>
    <% end %>
    <thead>
      <tr>
        <% header.each do |head| %>
          <th scope="col">
            <span class="cads-table__content"><%= head %></span>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% rows.each do |row| %>
        <tr>
          <% header.zip(row).each do |(head, cell)| %>
            <td>
              <% if responsive_headers? %>
                <span class="cads-table__th-heading"><%= head %></span>
              <% end %>
              <span class="cads-table__content"><%= cell %></span>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
