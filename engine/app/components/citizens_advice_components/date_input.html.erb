<div class="cads-form-field<% if error? %> cads-form-field--has-error<% end %>">
  <% if error? %><div class="cads-form-field__error-marker"></div><% end %>
  <div class="cads-form-field__content">
    <fieldset class="cads-form-group">
      <legend class="cads-form-field__label">
        <%= label %>
        <% if optional? %>
          <span class="cads-form-field__optional"><%= "(#{t('citizens_advice_components.input.optional')})" %></span>
        <% end %>
      </legend>
      <% if hint? %>
        <p class="cads-form-field__hint"><%= hint %></p>
      <% end %>
      <% if error? %>
        <p class="cads-form-field__error-message"><%= error_message %></p>
      <% end %>
      <div class="cads-date-input">
        <% %i[day month year].each do |timespan| %>
          <div class="cads-date-input__item">
            <%= tag.label(**label_attributes(timespan)) do %>
              <%= t("citizens_advice_components.date_input.#{timespan}") %>
            <% end %>
            <%= tag.input(**input_attributes(timespan)) %>
          </div>
        <% end %>
      </div>
    </fieldset>
  </div>
</div>
