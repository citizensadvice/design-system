<%= tag.button(class: "cads-button cads-button__#{variant}", type: type, **attributes) do %>
  <% if icon_left.present? %><%= tag.span(icon_left, class: "cads-button__icon-left") %><% end %>
  <%= content %>
  <% if icon_right.present? %><%= tag.span(icon_right, class: "cads-button__icon-right") %><% end %>
<% end %>
