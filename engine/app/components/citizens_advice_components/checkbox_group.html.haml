
.cads-form-field{ class: ("cads-form-field--has-error" if error?) }
  .cads-form-field__error-marker
  %fieldset.cads-form-field__content.cads-checkbox-group
    %legend.cads-form-field__label
      = legend
      - if optional?
        %span.cads-form-field__optional= t("citizens_advice_components.input.optional")
    - if hint?
      %p.cads-form-field__hint= hint
    - if error?
      %p.cads-form-field__error-message= error_message
    - checkboxes.each do |checkbox|
      .cads-checkbox-group__item
        %input.cads-checkbox-group__input{ checkbox.attributes(name) }
        %label.cads-checkbox-group__label{ for: checkbox.attributes(name)[:id] }
          = checkbox.label
