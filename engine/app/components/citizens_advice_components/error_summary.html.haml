.cads-error-summary.js-error-summary{ "data-testid": "error-summary", aria: { labelledby: "error-summary-title", live: "assertive" }, role: "alert", tabindex: "0", autofocus: true }
  - haml_tag("h#{heading_level}", id: "error-summary-title", class: "cads-error-summary__title") do
    = t("citizens_advice_components.error_summary.title")
  %ul.cads-error-summary__list
    - errors.each do |e|
      %li
        %a.js-error-summary-link{ href: e.href }
          = e.message
